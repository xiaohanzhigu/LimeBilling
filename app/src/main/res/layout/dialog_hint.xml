<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30dp"

            android:layout_centerHorizontal="true"
            android:background="@drawable/shape_15dp_white_corners">

        <TextView
                android:text="提示"
                android:textSize="20sp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_setting_dialog_title" />

        <TextView
                android:text="确定删除当前账单"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_below="@+id/tv_setting_dialog_title"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_setting_dialog_hint" />

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_setting_dialog_hint"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp">

            <Button
                    android:text="取消"
                    android:background="@drawable/shape_15dp_ligh_gray_corners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:id="@+id/btn_dialog_cancel" />

            <Button
                    android:text="确定"
                    android:background="@drawable/shape_15dp_green_corners"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btn_dialog_ensure" />
        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>