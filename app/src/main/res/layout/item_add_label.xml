<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:paddingLeft="11dp">

    <LinearLayout
            android:id="@+id/ll_inner_background"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_40dp_green_corners"
            android:padding="4dp">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_40dp_grey_corners"
                android:padding="11dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/bj_label_fs"
                    android:id="@+id/iv_add_label_image"
                    android:scaleX="1.2"
                    android:scaleY="1.2"/>
        </LinearLayout>


    </LinearLayout>

    <TextView
            android:text="餐饮"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_add_label_title" />
</LinearLayout>